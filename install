apt-get update
apt-get install python-pip build-essential python-dev tcpdump python-capstone libnetfilter-queue-dev libffi-dev libssl-dev -y
pip install -r requirements.txt
touch /data/data/com.termux/files/usr/bin/pythem
echo "cd $PWD && sudo ./pythem.py" | tee /data/data/com.termux/files/usr/bin/pythem
chmod +x /data/data/com.termux/files/usr/bin/pythem
cat <<EOT > ~/.local/share/applications/pythem.desktop
[Desktop Entry]
Name=pythem
Exec=pythem
StartupNotify=true
Terminal=true
Type=Application
Icon=$PWD/config/pythemico.png
EOT

